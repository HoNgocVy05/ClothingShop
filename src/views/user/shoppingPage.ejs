<div class="shopping-page">
    <div class="order-left">
        <h2>Mua hàng</h2>
        
        <div class="form-group">
            <label>Họ và tên</label>
            <input type="text" placeholder="Nhập họ và tên">
        </div>
        
        <div class="form-group">
            <label>Số điện thoại</label>
            <input type="tel" placeholder="Nhập số điện thoại">
        </div>
        
        <div class="form-group">
            <label>Tỉnh/Thành phố, Quận/Huyện, Phường/Xã</label>
            <input type="text" placeholder="Ví dụ: TP. Hồ Chí Minh, Quận 1, Phường Bến Nghé">
        </div>
        
        <div class="form-group">
            <label>Tên đường, Tòa nhà, Số nhà</label>
            <input type="text" placeholder="Ví dụ: 123 Đường Lê Lợi, Chung cư ABC, Lầu 5">
        </div>
        
        <div class="default-address">
            <span>Đặt làm địa chỉ mặc định</span>
            <label class="switch">
                <input type="checkbox">
                <span class="slider"></span>
            </label>
        </div>
        
        <div class="form-group">
            <label>Ghi chú</label>
            <textarea rows="4" placeholder="Ghi chú thêm cho shop (không bắt buộc)"></textarea>
        </div>
        
        <div class="shipping-method">
            <div class="shipping-box">
                <strong>Phí vận chuyển</strong>
                <span class="price">50.000đ</span>
            </div>
        </div>
        
        <button class="btn-checkout">Tiến hành thanh toán</button>
    </div>

    <div class="order-right">
        <div class="checkout-item">
            <div class="cart-product-img">
                <img src="/images/ao-lumi-1.png" alt="Đầm cerys">
            </div>
        <div class="checkout-detail">
            <div class="checkout-name">Đầm cerys</div>
            <div class="checkout-size">Size S</div>
        </div>
        <div class="checkout-price">320.000đ</div>
    </div>

    <div class="checkout-item">
        <div class="cart-product-img">
            <img src="/images/ao-lumi-1.png" alt="Đầm cerys">
        </div>
        <div class="checkout-detail">
            <div class="checkout-name">Áo layla</div>
            <div class="checkout-size">Size M</div>
        </div>
        <div class="checkout-price">280.000đ</div>
    </div>

    <div class="checkout-item">
        <div class="cart-product-img">
            <img src="/images/ao-lumi-1.png" alt="Đầm cerys">
        </div>
        <div class="checkout-detail">
            <div class="checkout-name">Áo elena</div>
            <div class="checkout-size">Size S</div>
        </div>
        <div class="checkout-price">200.000đ</div>
    </div>

    <div class="checkout-summary">
        <div class="sum-row"><span>Tổng phụ 3 mặt hàng</span><strong>800.000đ</strong></div>
        <div class="sum-row"><span>Vận chuyển</span><span>50.000đ</span></div>
        <div class="sum-total"><span>Tổng</span><strong>800.000đ</strong></div>
    </div>
        
