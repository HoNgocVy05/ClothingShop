<div class="shopping-cart">
    <% if (cart && cart.length > 0) { %>
        <table class="cart-table">
            <thead>
                <tr>
                    <th>
                        <input type="checkbox" class="cart-checkbox" id="select-all">
                    </th>
                    <th></th>
                    <th>Giá</th>
                    <th>Số lượng</th>
                    <th class = "hidden-total">Thành tiền</th>
                </tr>
            </thead>
            <tbody>

                <% cart.forEach(item=> { %>
                    <tr class="shopping-product" data-product-id="<%= item.productId %>" data-size="<%= item.size %>">
                        <td><input type="checkbox" class="cart-checkbox row-checkbox"></td>
                        <td>
                            <div class="cart-product-box">
                                <div class="cart-product-img">
                                    <img src="uploads/products/<%= item.image %>" alt="<%= item.name %>">
                                </div>
                                <div class="cart-product-info">
                                    <a href="/product-infomation?id=<%= item.productId %>" class="product-name">
                                        <%= item.name %>
                                    </a>
                                    <p class="size">Size: <%= item.size %>
                                    </p>
                                    <button class="remove-item" data-id="<%= item.productId %>" data-size="<%= item.size %>">
                                        Xóa
                                    </button>
                                </div>
                            </div>
                        </td>
                        <td class="price-cell">
                            <% if (item.discountPercent > 0) { %>
                                <p class="discount-price" data-price="<%= Number(item.price) %>">
                                    <%= Number(item.price).toLocaleString() %>đ
                                </p>
                                <p class="origin-price" data-original-price="<%= Number(item.originalPrice) %>">
                                    <%= Number(item.originalPrice).toLocaleString() %>đ
                                </p>
                            <% } else { %>
                                <p class="discount-price" data-price="<%= Number(item.price) %>" style="display:none"></p>
                                <p class="origin-price nodis" data-original-price="<%= Number(item.originalPrice) %>">
                                    <%= Number(item.price).toLocaleString() %>đ
                                </p>
                            <% } %>
                        </td>
                        <td>
                            <div class="quantity-controls">
                                <button class="cart-quantity-btn" data-change="-1">-</button>
                                <input type="text" class="quantity-input" value="<%= item.quantity %>" readonly />
                                <button class="cart-quantity-btn" data-change="1">+</button>
                            </div>
                        </td>
                        <td class="subtotal-cell hidden-total">
                            <% 
                                const finalPrice = item.price;
                                const subTotal = finalPrice * item.quantity;
                            %>
                            <p class="discount-price sub-total-display" data-sub-total="<%= subTotal %>"> 
                                <%= subTotal.toLocaleString() %>đ
                            </p>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <div class="cart-footer">
            <div class="cart-summary">
                <span class="summary-text">
                    Số lượng (<span id="total-quantity"><%= totalQuantity %></span>)
                </span>
                <span class="summary-text total-price">
                    Tổng tiền: <strong id="total-amount"><%= totalAmount.toLocaleString() %>đ</strong>
                </span>
            </div>
            <button class="btn btn-buy">MUA NGAY</button>
        </div>
        <% } else { %>
            <h2 style="margin: 0 auto">Giỏ hàng trống</h2>
    <% } %>
</div>