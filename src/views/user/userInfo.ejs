<div class="user-info-container">
    <div class="edit-profile form-row">
        <h2>SỬA HỒ SƠ <i class="fa-solid fa-pen-to-square"></i></h2>
        <button type="submit"><i class="fa-solid fa-floppy-disk"></i></button>
    </div>

    <div class="user-info">
        <div class="form-row">
            <label>Tên</label>
            <input type="text" name="name" placeholder="Thiết lập ngay" value="">
        </div>
        <div class="form-row">
            <label>Tiểu sử</label>
            <input type="text" name="bio" placeholder="Thiết lập ngay" value="">
        </div>
    </div>

    <div class="user-info">
        <div class="form-row">
            <label>Địa chỉ</label>
            <input type="text" name="address" placeholder="Thiết lập ngay" value="">
        </div>
        <div class="form-row">
            <label>Ngày sinh</label>
            <input type="date" name="dayOfBirth" placeholder="Thiết lập ngay" value="">
        </div>
        <div class="form-row">
            <label for="gender">Giới tính</label>
            <div class="gender-box">
                <select name="gender" id="gender" class="gender-select">
                    <option value="male">Nam</option>
                    <option value="female">Nữ</option>
                    <option value="other">Khác</option>
                </select>
            </div>
        </div>

    </div>
    <div class="user-info">
        <div class="form-row">
            <label>Email</label>
            <input type="text" name="email" value="abc@gmail.com" disabled>
        </div>
        <div class="form-row">
            <label>Số điện thoại</label>
            <input type="tel" name="phoneNumber" placeholder="Thiết lập ngay" value="" id="phoneNumber">
        </div>
    </div>
</div>