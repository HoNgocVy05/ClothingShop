<form action="/update-user" method="POST">
    <div class="user-page">
        <%- include("../partials/userSidebar", { activePage: "user-infomation" }) %>

        <div class="sidebar-content">
            <div class="user-info-container">

                <div class="edit-profile form-row">
                    <h2>SỬA HỒ SƠ <i class="fa-solid fa-pen-to-square"></i></h2>
                    <button type="submit"><i class="fa-solid fa-floppy-disk"></i></button>
                </div>

                <div class="user-info">
                    <div class="form-row">
                        <label>Tên</label>
                        <input type="text" name="fullname" placeholder="Thiết lập ngay"   value="<%= user?.fullname || '' %>">
                    </div>

                    <div class="form-row">
                        <label>Tiểu sử</label>
                        <input type="text" name="bio" placeholder="Thiết lập ngay" value="<%= user?.bio || '' %>">
                    </div>
                </div>

                <div class="user-info">
                    <div class="form-row">
                        <label>Địa chỉ</label>
                        <input type="text" name="address" placeholder="Thiết lập ngay"
                            value="<%= user?.address || '' %>">
                    </div>

                    <div class="form-row">
                        <label>Ngày sinh</label>
                        <input type="date" name="dayOfBirth" 
                            value="<%= user?.dayOfBirth ? user.dayOfBirth.toISOString().split('T')[0] : '' %>">
                    </div>

                    <div class="form-row">
                        <label for="gender">Giới tính</label>
                        <div class="gender-box">
                            <select name="gender" id="gender" class="gender-select" aria-label="Giới tính">
                                <option value="male"   <%= user && user.gender === 'male' ? 'selected' : '' %>>Nam</option>
                                <option value="female" <%= user && user.gender === 'female' ? 'selected' : '' %>>Nữ</option>
                                <option value="other"  <%= user && user.gender === 'other' ? 'selected' : '' %>>Khác</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="user-info">
                    <div class="form-row">
                        <label>Email</label>
                        <input type="email" class="disabled" name="email" placeholder="Thiết lập ngay"  value="<%= user?.email || '' %>" readonly>
                    </div>

                    <div class="form-row">
                        <label>Số điện thoại</label>
                        <input type="text" name="phoneNumber" placeholder="Thiết lập ngay" required value="<%= user?.phoneNumber || '' %>">
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
